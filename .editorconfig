root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.toml]
max_line_length = 100

[*.md]
trim_trailing_whitespace = false

[*.{bash,go,sh,zsh,justfile,Makefile}]
indent_style = tab
indent_size = 4

[layouts/shortcodes/*.html]
insert_final_newline = false
